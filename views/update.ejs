<% include ./partials/header %>

<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" value="<%= blog.Title %>" name="blog[Title]" />
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" value="<%= blog.Image %>" name="blog[Image]" />
    </div>
    <div class="field">
        <label>Body</label>
        <textarea name="blog[Body]"> <%= blog.Body %> </textarea>
    </div>
    <input class="ui secondary button" type="submit" value="Submit" />
</form>

<% include ./partials/footer %>

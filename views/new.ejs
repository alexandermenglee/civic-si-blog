<% include partials/header %>

<div class="ui raised very padded text container segment">
  <h1>New Blog</h1>
  <form class="ui form" action="/blogs" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="post[Title]"placeholder="Title" required/>
    </div>
    <div class="field">
      <label>Image URL</label>
      <input type="text" name="post[Image]"placeholder="Image URL" />
    </div>
    <div class="field">
      <label>Body</label>
      <textarea name="post[Body]" required></textarea>
    </div>
    <input class="ui secondary button" type="submit" value="Create" />
  </form>
</div>

